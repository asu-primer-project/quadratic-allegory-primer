<?xml version="1.0"?>
<!-- Template for LudoNarrare story world definition file -->
<StoryWorld name="Dynamic Paint World" userEntity="Jane">

	<!-- People -->
	<Entity name="Jane">
		<Attribute name="hasInventory"/>
		<Attribute name="paintable" />
		<Relationship name="isColor" object="Red"/>
	</Entity>

	<!-- Colors -->
	<Entity name="Red"><Attribute name="color" /></Entity>
	<Entity name="Yellow"><Attribute name="color" /></Entity>
	<Entity name="Orange"><Attribute name="color" /></Entity>
	<Entity name="Green"><Attribute name="color" /></Entity>
	<Entity name="Blue"><Attribute name="color" /></Entity>
	<Entity name="Purple"><Attribute name="color" /></Entity>
	
	<!-- Misc -->
	<Entity name="Paintbrush"/>
		<Attribute name="pickupable" />
	</Entity>
	
	<!-- Verbs -->
	<Verb name="Pick Up">
		<Variable name="?toPickUp" />
		
		<In text="pick up" />
		<In text="?toPickUp" />
		
		<Out text="?me" />
		<Out text="picks up" />
		<Out text="?toPickUp" />
		
		<Condition name="Pick up is pickupable" subject="?toPickUp" negate="false">
			<Attribute name="pickupable" />
		</Condition>
		<Condition name="I can pick up things" subject="?me" negate="false">
			<Attribute name="hasInventory" />
		</Condition>
		<Condition name="Pick up is not already picked up" subject="?toPickUp" negate="true">
			<Relationship name="ownedBy" object="?any" />
		</Condition>
		
		<Operator name="" subject="?me" type="add">
			<Attribute name="..." /> || <Relationship name="..." object="..." /> || <Obligation verb="..." var="..." /> || <Behavior verb="..." chance="..." var="..." /> || For Goal Reference Below
		</Operator>
	</Verb>
	
	<!-- Story World Attributes -->
	<!-- Begin Text Template
	<Begin text="..."/>
	-->
	
	<!-- End Text Template
	<End text="..."/>
	-->
	
	<!-- Attribute Template
	<Attribute name="..." />
	-->
	
	<!-- Relationship Template
	<Relationship name="..." object="..." />
	-->
	
	<!-- Condition Template
	<Condition name="..." subject="..." negate="false" || "true">
		<Attribute name="..." /> || <Relationship name="..." object="..." />
	</Condition>
	-->
	
	<!-- Operator Template
	<Operator name="..." subject="..." type="add" || "remove">
		<Attribute name="..." /> || <Relationship name="..." object="..." /> || <Obligation verb="..." var="..." /> || <Behavior verb="..." chance="..." var="..." /> || For Goal definition see below
	</Operator>
	-->
	
	<!-- Obligation Template
	<Obligation name="..." verb="..." var1="..." />   <==== The number of "var#='...'" statements matches the number of variables in the verb. Default value is ?rand.
	-->

	<!-- Goals Template
	<Goal name="..." subject="..." type="add" || "remove">
			<Attribute name="..." /> || <Relationship name="..." object="..." /> || <Obligation verb="..." var1="..." /> || <Behavior verb="..." chance="..." var1="..." />
	</Goal>
	-->
	
	<!-- Behavior Template
	<Behavior name="..." verb="..." chance="..." var1="..." />   <==== The number of "var#='...'" statements matches the number of variables in the verb. Default value is ?rand.
	-->
	
	<!-- Story World Main Data Structures -->
	<!-- Entity Template
	<Entity name="...">
		<Attribute name="..."/>
		
		<Relationship name="..." object="..."/>
		
		<Obligation verb="..." var="..." />
		
		For Goal definition see above
		
		<Behavior verb="..." chance="..." var="..." />	
	</Entity>
	-->
	
	<!-- End Condition Template 
	<EndCondition name="..." subject="..." negate="...">
		<Attribute name="..." /> || <Relationship name="..." object="..." />
	</EndCondition>
	-->
	
	<!-- Verb Template
	<Verb name="...">
		<Variable name="?..." />
		
		<In text="..." />
		
		<Out text="..." />
		
		<Condition name="..." subject="..." negate="...">
			<Attribute name="..." /> || <Relationship name="..." object="..." />
		</Condition>
		
		<Operator name="..." subject="..." type="add" || "remove">
			<Attribute name="..." /> || <Relationship name="..." object="..." /> || <Obligation verb="..." var="..." /> || <Behavior verb="..." chance="..." var="..." /> || For Goal Reference Below
		</Operator>
	</Verb>
	-->
	
</StoryWorld>

<!-- Reserved Words 

?me - Built in variable which references the entity executing the verb.
?rand - Built in variable which tells the AI that they can take a random path down the verb tree.
?any - Used for checking if an entity has a relationship of a certain type with any other entity or if any entity has the given attribute or relationship.
Wait - Built in verb which allows entities to do nothing. Needed to handle cases where there are no available verbs for an entity.

-->